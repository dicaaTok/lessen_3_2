<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name ="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="DigitButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="OperationButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>
    <style name="OtherButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white_grey</item>
    </style>

    <style name="HorizontalLinearLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LastHorizontalLinearLayoutStyle">
        <item name="android:weightSum">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>